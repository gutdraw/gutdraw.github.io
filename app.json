{
    "$jason": {
        "head": {

        "actions": {
        "$load": {
          "type": "$set",
          "options": {
          },
          "success": {
            "trigger": "reload"
          }
        },
        "reload": {
          "type": "$network.request",
          "options": {
            "url": "{{$jason.url}}",
            "data_type": "html"
          },
          "success": {
            "type": "$render",
            "options": {
              "type": "html"
        }

        }
      }
    },
        "body": {
        "background": {
            "type": "html",
            "url": "http://gutdraw.pythonanywhere.com/needle",
            "action": {
            "trigger": "load"
            }
        }
        }
    }
}
